<h2>View Password</h2>

<form method="post">
    <div class="form-group">
        <label>Encryption Key</label>
        <input type="text" name="encryptionKey" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Decrypt Password</button>
</form>

@if (ViewBag.DecryptedPassword != null)
{
    <div class="alert alert-success">
        <strong>Decrypted Password:</strong> @ViewBag.DecryptedPassword
    </div>
}
